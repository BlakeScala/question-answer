{{#if addNewQuestion}}
  <form>
    <h1>New Question</h1>
    <div class="form-group">
      <label for="author">Email</label>
      {{input value=author id="author" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question id="question" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="notes">Information</label>
      {{input value=notes id="notes" class="form-control"}}
    </div>
    <button class="btn btn-default" {{action 'saveQuestion'}}>Save Question</button>
  </form>
{{else}}
  <button class="btn btn-default" {{action 'showQuestionForm'}}>Add New Question</button>
{{/if}}
